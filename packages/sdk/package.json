{
  "name": "@openformat/sdk",
  "version": "0.0.1",
  "repository": "https://github.com/open-format/js/tree/main/packages/sdk",
  "author": "OpenFormat Dev <dev@openformat.tech>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/sdk.esm.js",
  "exports": {
    ".": {
      "import": "./dist/sdk.esm.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "prepare": "yarn run generate-contract-types && tsup",
    "generate-contract-types": "typechain --target ethers-v5 --out-dir src/contract-types ./abis/*.json",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "jest": {
    "globalSetup": "./test/setup.ts",
    "globalTeardown": "./test/teardown.ts",
    "testTimeout": 10000
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/open-format.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/open-format.esm.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/lodash.merge": "^4.6.7",
    "ethers": "^5",
    "ganache": "^7.2.0",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "tsup": "^6.5.0",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2"
  }
}
