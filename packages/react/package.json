{
  "name": "@openformat/react",
  "version": "0.0.1",
  "repository": "https://github.com/open-format/js/tree/main/packages/react",
  "author": "OpenFormat Dev <dev@openformat.tech>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/openformat-react.cjs.js",
  "module": "dist/openformat-react.esm.js",
  "types": "dist/openformat-react.d.ts",
  "exports": {
    ".": {
      "module": "./dist/openformat-react.esm.js",
      "default": "./dist/openformat-react.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup --watch",
    "build": "tsup",
    "prepare": "tsup",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "^5",
    "react": ">=16"
  },
  "jest": {
    "globalSetup": "./test/setup.ts",
    "globalTeardown": "./test/teardown.ts",
    "testTimeout": 10000
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "preconstruct": {
    "exports": true
  },
  "size-limit": [
    {
      "path": "dist/react.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@preconstruct/cli": "^2.3.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "ethers": "^5",
    "graphql-request": "^4.3.0",
    "husky": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@openformat/sdk": "workspace:^",
    "@tanstack/react-query": "^4.0.10",
    "connectkit": "0.0.2",
    "wagmi": "0.5.8"
  }
}
