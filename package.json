{
  "name": "open-format",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/**",
    "examples/**",
    "docs/"
  ],
  "repository": "git@github.com:openformat/js.git",
  "author": "OpenFormat Dev <dev@openformat.tech>",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.4.0",
  "scripts": {
    "dev:node": "turbo run dev --filter=node",
    "dev:react": "turbo run dev --filter=react-next",
    "packages:watch": "turbo run watch --filter='./packages/*'",
    "dev": "turbo run dev",
    "start": "turbo run start --parallel --filter=!docs",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=!docs --filter=!react-next",
    "document": "node generate-docs.js",
    "version:alpha": "yarn changeset version --snapshot alpha",
    "release:alpha": "yarn changeset publish --tag alpha --no-git-tag",
    "release": "yarn changeset publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.26.0",
    "@godaddy/dmd": "^1.0.3",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.1",
    "turbo": "^1.2.16"
  }
}
